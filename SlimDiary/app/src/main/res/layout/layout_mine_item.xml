<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <View
        android:layout_width="match_parent"
        android:layout_height="10.0dip"
        android:layout_marginTop="5dp"
        android:background="@color/colorSmallGray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--左边状态条-->
        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="#A6A6A6" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_screen_lock"/>

        </LinearLayout>
        <!--右边内容-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:id="@+id/tv_layout_mime_item_Self_evaluation"
                android:textSize="17sp"
                android:textColor="@color/colorBigBigGray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/colorGrayLine" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:id="@+id/tv_layout_mime_item_Private_thing"
                android:textSize="17sp"
                android:textColor="@color/colorBigBigGray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/colorGrayLine" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="25dp"
                    android:text="2017-01-01  18:00"
                    android:id="@+id/tv_layout_mime_item_Time"
                    android:layout_weight="5"
                    android:textColor="@color/colorMiddleGary"
                    android:textSize="13sp"/>

                <ImageView
                    android:clickable="true"
                    android:layout_width="20dip"
                    android:layout_height="20dp"
                    android:id="@+id/btn_layout_theirs_item_comment"
                    android:src="@mipmap/ic_favorite_border_red_24dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="36dip"
                    android:clickable="true"
                    android:drawablePadding="1.0dip"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="@color/colorMiddleGary"
                    android:textSize="15.0sp"
                    android:id="@+id/tv_layout_mime_item_my_likes"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>